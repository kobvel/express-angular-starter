{
  "root": true,
  "parser"  : "babel-eslint",
  "extends" : [
    "airbnb/base"
  ],
  "plugins" : [
    "flow-vars"
  ],
  "env"     : {
    "es6": true,
    "node": true,
    "mocha": true
  },
  globals: {
    app: true,
    expect: true,
    request: true,
    by: true,
    element: true,
    browser: true,
    jasmine: true,
    inject: true,
    angular: true,
    ApplicationConfiguration: true,
    io: true,
    $: true,
    window: true,
  },
  "rules": {
    "prefer-arrow-callback": 0,
    "semi" : [2, "always"],
    "no-param-reassign": [2, {"props": false}],
    "func-names": 0,
    "no-unused-expressions": 0,
    "no-console": 0,
    "one-var": 0,
    "new-cap": 0,
    "quote-props": 0,
    "prefer-template": 0,
    "arrow-body-style": 0,
    "no-empty-label": 0,
    "no-labels": 2,
    "no-unused-vars": [2, { "args": "none" }],
    "no-use-before-define": [2, { "functions": false, "classes": true }],
    "arrow-parens": 0,
    "import/extensions": 0,
    "global-require": 0,
    "no-restricted-syntax": 0,
    "no-prototype-builtins": 0,
  }
}